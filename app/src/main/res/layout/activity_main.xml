<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:text="Songs"
        android:textColor="#4368AE"
        android:textSize="34sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Song Title"
        android:textColor="#496AAF"
        android:textSize="20sp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Enter song title"
        android:inputType="text"
        android:textColor="#496AAF"
        android:textColorHint="#F9EFD4"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Singers"
        android:textColor="#496AAF"
        android:textColorHint="#F9EFD4"
        android:textSize="20sp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Enter singers' name"
        android:inputType="text"
        android:textColor="#496AAF"
        android:textColorHint="#F9EFD4"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Year"
        android:textColor="#496AAF"
        android:textColorHint="#F9EFD4"
        android:textSize="20sp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/etYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:hint="Enter year of release"
        android:inputType="text"
        android:textColor="#496AAF"
        android:textColorHint="#F9EFD4"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="Stars"
        android:textColor="#496AAF"
        android:textColorHint="#87775E"
        android:textSize="20sp"
        android:padding="10dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#E1E1E1"
            android:fontFamily="@font/baloo"
            android:text="1"
            android:textColor="#F3E9D0"
            android:textColorHint="#C5C5C5"
            android:textSize="22sp"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/rbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#E1E1E1"
            android:fontFamily="@font/baloo"
            android:text="2"
            android:textColor="#F3E9D0"
            android:textColorHint="#C5C5C5"
            android:textSize="22sp"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/rbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#E1E1E1"
            android:fontFamily="@font/baloo"
            android:text="3"
            android:textColor="#F3E9D0"
            android:textColorHint="#C5C5C5"
            android:textSize="22sp"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#E1E1E1"
            android:fontFamily="@font/baloo"
            android:text="4"
            android:textColor="#F3E9D0"
            android:textColorHint="#C5C5C5"
            android:textSize="22sp"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#E1E1E1"
            android:fontFamily="@font/baloo"
            android:text="5"
            android:textColor="#F3E9D0"
            android:textColorHint="#C5C5C5"
            android:textSize="22sp"
            android:padding="10dp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="INSERT"
            android:textColor="#4368AD"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnShowList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="SHOW LIST"
            android:textColor="#4368AD"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>